<bx-modal id="confirm-modal">
  <bx-modal-header>
    <bx-modal-heading>Confirm</bx-modal-heading>
  </bx-modal-header>
  <bx-modal-body>
    <p>Are you sure you want to delete this mod? This action cannot be undone.</p>
  </bx-modal-body>
  <bx-modal-footer>
    <bx-modal-footer-button kind="secondary" autofocus data-modal-close>Cancel</bx-modal-footer-button>
    <bx-modal-footer-button kind="danger">Confirm</bx-modal-footer-button>
  </bx-modal-footer>
</bx-modal>

