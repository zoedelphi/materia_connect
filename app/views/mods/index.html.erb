<div class="flex-container">
  <div class="flex-item">
    <h1>
      <% if @tag.present? %>
        Mods tagged with "<%= @tag %>"
      <% else %>
        Mods
      <% end %>
    </h1>
  </div>

  <div class="flex-item">
    <p>
      <% if session[:user_id] %>
        <bx-btn href="<%= new_mod_path %>">Publish New Mod</bx-btn>
      <% end %>
    </p>
  </div>
</div>

<div id="mods"></div>

<%= turbo_frame_tag "pagination", src: mods_path(format: :turbo_stream), loading: :lazy %>

<%#= render partial: "next_page", locals: { collection: @mods } %>

<!--<div id="next_link">-->
  <%#= button_to "Next", pagy_url_for(@pagy, @pagy.next) %>
<!--</div>-->

<% if @tag.present? %>
  <p>
    <bx-link href="javascript:history.back()">Back</bx-link>
  </p>
<% end %>