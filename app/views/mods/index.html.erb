<div class="flex-container">
  <div class="flex-item">
    <h1>
      <% if @tag.present? %>
        Mods tagged with "<%= @tag %>"
      <% else %>
        Mods
      <% end %>
    </h1>
  </div>

  <div class="flex-item">
    <p>
      <% if session[:user_id] %>
        <bx-btn href="<%= new_mod_path %>">Publish New Mod</bx-btn>
      <% end %>
    </p>
  </div>
</div>

<!-- this is not fast! -->
<!-- change this when the carousel works with turbo links -->
<div id="mods" data-no-turbolink>
  <%= render partial: "mod", collection: @mods %>
</div>

<%#= turbo_frame_tag "pagination", src: mods_path(format: :turbo_stream), loading: :lazy %>

<% if @tag.present? %>
  <p>
    <bx-link href="javascript:history.back()">Back</bx-link>
  </p>
<% end %>