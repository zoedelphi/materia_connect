<% if @query.present? %>
  <h1>Showing results for "<%= @query %>"</h1>
<% else %>
  <h1>Search</h1>
<% end %>

<%= form_with url: search_path, method: :get do %>
  <div class="flex-container" id="search-horiz">

    <div class="flex-child" id=search-horiz-left>
      <bx-search name="query" label-text="Search for a mod..." value="<%= @query.present? ? @query : '' %>" type="text"></bx-search>
    </div>
    <div class="flex-child" id=search-horiz-right>
      <%= submit_tag 'Search', type: 'submit', class: 'confirm-btn primary', name: nil %>
    </div>

  </div>
<% end %>

<div id="mods">
  <% if @mods.present? %>
    <% @mods.each do |mod| %>
      <%= render partial: "mods/mod", locals: { mod: mod, id: mod.id } %>
    <% end %>
  <% end %>
</div>